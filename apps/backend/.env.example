# Backend runtime
PORT=8787
BITVIBE_ALLOW_ORIGIN=*
BITVIBE_REQUEST_TIMEOUT_MS=60000

# Optional bearer token expected from extension APP_TOKEN
SERVER_APP_TOKEN=

# Provider for managed generation: openai | gemini | openrouter
BITVIBE_PROVIDER=openai

# Shared/default model and key
BITVIBE_MODEL=gpt-4o-mini
BITVIBE_API_KEY=

# Provider-specific overrides (optional)
BITVIBE_OPENAI_API_KEY=
BITVIBE_OPENAI_MODEL=gpt-4o-mini

BITVIBE_GEMINI_API_KEY=
BITVIBE_GEMINI_MODEL=gemini-2.5-flash

BITVIBE_OPENROUTER_API_KEY=
BITVIBE_OPENROUTER_MODEL=openrouter/auto

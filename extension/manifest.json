{
  "manifest_version": 3,
  "name": "bit:vibe",
  "description": "Inject the bit:vibe panel into MakeCode editors.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "https://makecode.microbit.org/*",
        "https://arcade.makecode.com/*",
        "https://maker.makecode.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://bitvibe.dev.tk.sg/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*"
  ]
}
